doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    title Georeactor
    link(rel="stylesheet", type="text/css", href="/styles/lib/leaflet.css")
    link(rel="stylesheet", href="/styles/uploader.css", type="text/css")
  body
    #sidebar
      h3 Georeactor
      h4 Upload a File
      form.box(action="/upload", method="POST")
        small Pick a KML, GeoJSON, TopoJSON, or zipped Shapefile
        input.file(type="file", name="upload")
        br
        small Give it a name
        input(type="text", name="name")
        br
        input.btn(type="submit", value="Upload")
        br
    #map
    script(type="text/javascript") var georeactor = { map: "leaflet", div: "map", data: []};
    script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/topojson/1.6.19/topojson.min.js")
    script(type="text/javascript", src="/scripts/lib/togeojson.js")
    script(type="text/javascript", src="/scripts/lib/shp.min.js")
    script(type="text/javascript", src="/scripts/lib/leaflet.js")
    script(type="text/javascript", src="/scripts/lib/leaflet-hash.js")
    script(type="text/javascript", src="/scripts/geoleaflet-client.js")
    script(type="text/javascript", src="//code.jquery.com/jquery-1.11.3.min.js")
    script(type="text/javascript", src="/scripts/uploader.js")
